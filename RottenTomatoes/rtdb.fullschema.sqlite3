CREATE TABLE movies (
title text,
year int,
releasedate text,
rtmeterall int,
rtmetertop int,
criticconsensus text,
runtime int,
rating text,
ratingnotes text,
medium text default "",
version text default "",
genres text,
studio text,
synopsis text,
rtmovieurl text,
unique(title,year,medium,version));

CREATE TABLE people(
 personid INTEGER primary key asc,
 credited text,
 first text,
 middle text,
 last text,
 other text,
 akas text,
 notes text,
 dob text,
 gender text,
 rturl text default "",
 wkurl text default "",
 unique(rturl,wkurl));

CREATE TABLE actors(
personid int,
movieid int,
unique(personid,movieid));

CREATE TABLE directors (
personid int,
movieid int,
unique(personid,movieid));

CREATE TABLE writers(
personid int,
movieid int,
unique(personid,movieid));

CREATE TABLE characters (
actorid int,
movieid int,
name text,
unique(actorid,movieid,name));

CREATE TABLE reviews (
criticid int,
movieid int,
reviewurl text default "",
fresh int,
blurb text,
unique(criticid,movieid,reviewurl));

CREATE TABLE critics (
personid int,
sourceid int,
topcritic int,
unique(personid,sourceid));

CREATE TABLE reviewsources (
sourceid INTEGER primary key asc,
name text,
url text);
